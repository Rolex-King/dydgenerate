<h2 class="text-center">Log in</h2>

<div class="container" style="background-color: yellow;" >

<div class="row">
<div class="col-md-5 col-md-offset-5 container">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "ContraseÃ±a" %><br />
    <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recordar" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Login", class:"btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>