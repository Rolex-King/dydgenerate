  <div class="card-header" style="width: 100%;"><h1 class="text-center">Registro</h1></div>
  <div class="card-body">
    <div class="row">
<div class="col-md-5 col-md-offset-5 container">


<%= form_for(resource, as: resource_name,  url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
