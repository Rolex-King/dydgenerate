<div class="card text-white bg-dark mb-3 container top-space relative" style="width: 35%;">
  <div class="card-header" style="width: 100%;"><h1 class="text-center">Login</h1></div>
  <div class="card-body">
    <div class="row">
<div class="col-md-5 col-md-offset-5 container">


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "ContraseÃ±a" %><br />
    <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recordar" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Login", class:"btn btn-primary btn-block" %>
  </div>
<% end %>

